var last = 0
var delta = 0
var average = 0
var avgTimer = 0
var avgAcc = 1
var avgCount = 1

function micro.timer.step()
{
    const now = micro.timer.getTime()
    if(last == 0) last = now
    delta = now - last
    last = now
    avgTimer = avgTimer - delta
    avgAcc = avgAcc + delta
    avgCount = avgCount + 1
    if(avgTimer <= 0)
    {
        average = avgAcc / avgCount
        avgTimer = avgTimer + 1
        avgCount = 0
        avgAcc = 0
    }
}

function micro.timer.getDelta()
{
    return delta
}

function micro.timer.getAverage()
{
    return average
}

function micro.timer.getFps()
{
    import math
    return math.floor(1 / average + 0.5)
}